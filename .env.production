# ============================================================
# ENVIRONMENT VARIABLES FOR PRODUCTION DEPLOYMENT
# ============================================================
# Copy this file to .env and update values for production
# DO NOT commit .env file to version control!
# ============================================================

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
POSTGRES_DB=nurothon_db
POSTGRES_USER=nurothon_user
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION_123!@#

# ============================================================
# APPLICATION CONFIGURATION
# ============================================================
APP_ENV=production
DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_IN_PRODUCTION

# ============================================================
# CORS CONFIGURATION
# ============================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost,http://localhost:80,https://yourdomain.com

# ============================================================
# AI CONFIGURATION
# ============================================================
AI_CONFIDENCE_THRESHOLD=0.7

# ============================================================
# FILE STORAGE
# ============================================================
INVOICE_DIR=/app/invoices
UPLOAD_DIR=/app/uploads

# ============================================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ============================================================
# OPTIONAL: MONITORING
# ============================================================
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=INFO

# ============================================================
# OPTIONAL: BACKUP
# ============================================================
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
